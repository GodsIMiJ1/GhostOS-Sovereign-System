{
  "name": "ghostos",
  "version": "1.0.0",
  "description": "GhostOS - The Empire's Official AI-Native Modular Operating System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "export": "npm run build && npm run copy-static",
    "copy-static": "mkdir -p out && cp -r .next/server/app/* out/ && cp -r .next/server/pages/* out/ && cp -r .next/static out/_next && cp -r docs out/",
    "deploy": "npm run export",
    "type-check": "tsc --noEmit",
    "backend": "tsx watch ghostos/index.ts",
    "flame": "tsx ghostos/cli/FlameCLI.ts",
    "test": "jest",
    "clean": "rm -rf dist out .next"
  },
  "keywords": [
    "ghostos",
    "ai-native",
    "modular",
    "operating-system",
    "flame",
    "sovereign"
  ],
  "author": "Ghost King Melekzedek - James Derek Ingersoll",
  "license": "FLAME-SOVEREIGN",
  "dependencies": {
    "autoprefixer": "^10.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "readline": "^1.3.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.3.0",
    "ws": "^8.14.2",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/ws": "^8.5.8",
    "jest": "^29.7.0",
    "tsx": "^4.19.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
